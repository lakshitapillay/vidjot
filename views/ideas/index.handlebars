{{#each ideas}}
    <div class="card card-body mb-2">
        <h1>{{title}}</h1>
        <p>{{details}}</p>
        <a href="/ideas/edit/{{id}}" class="btn btn-dark btn-block">Edit</a>
        <form action="/ideas/{{id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-danger btn-block mt-2" value = "Delete">
        </form>
    </div>
{{else}}
    <p>No video ideas listed</p>
{{/each}}